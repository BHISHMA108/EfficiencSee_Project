FROM python:3.11

WORKDIR /app

# Copy requirements first
COPY requirements.txt ./

# Upgrade TensorFlow to match your model
RUN pip install --no-cache-dir --upgrade tensorflow==2.12.0 \
    && pip install --no-cache-dir -r requirements.txt

# Copy the rest of the backend code
COPY . .

# Expose Flask port
EXPOSE 5001

# Run Flask
CMD ["python", "app.py"]
